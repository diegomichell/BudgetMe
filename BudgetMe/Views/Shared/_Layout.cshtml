<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar color-primary-0 navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BudgetMe", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            @if (User.Identity.IsAuthenticated)
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "fa fa-home" })</li>
                        <li><a href="/transactions">Transacciones</a></li>
                        <li><a href="/wallets">Carteras</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            var user = BudgetMe.App_Start.AppUserManager.GetUser();

                            <li><a href="#" class="display-name">@user.FirstName @user.LastName</a></li>
                            <li>@Html.ActionLink("Salir", "LogOut", "Home")</li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/canvasjs")
    @RenderSection("scripts", required: false)

</body>
</html>
