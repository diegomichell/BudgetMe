@model BudgetMe.Models.Transaction

@{
    ViewBag.Title = "Detalle";
}

<h3 class="section-title">Transacción - Detalle</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Amount)
        </dt>

        <dd>
            @if (Model.TransactionType == BudgetMe.Models.TransactionType.INCOME)
            {
                <span class="amount amount-income">
                    @Html.DisplayFor(model => model.Amount)
                </span>
            }
            else
            {
                <span class="amount amount-expense">
                    @Html.DisplayFor(model => model.Amount)
                </span>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TransactionType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TransactionType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Regresar", "Index")
</p>
